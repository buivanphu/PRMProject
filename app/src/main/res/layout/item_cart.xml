<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <TextView android:id="@+id/tvName" android:textSize="18sp"
        android:textStyle="bold" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvQuantity"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#555" />

    <TextView android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#008000" android:textStyle="italic" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❌ Xóa"
        android:textColor="#B71C1C"
        android:layout_marginTop="4dp"/>
</LinearLayout>
