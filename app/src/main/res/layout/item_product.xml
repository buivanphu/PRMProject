<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/tvName" android:textSize="18sp"
        android:textStyle="bold" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvDescription" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="#555" />

    <TextView android:id="@+id/tvPrice" android:textStyle="italic"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
